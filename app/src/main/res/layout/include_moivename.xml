<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_hotItem"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:id="@+id/linearLayout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_titile"
            android:textSize="24sp"
            android:textColor="@color/primary_text_color"
            android:text=""
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detai_genres"
            android:textSize="16sp"
            android:textColor="@color/second_text_color"
            android:text="分类："
            android:layout_marginTop="4dp"
            />

        <TextView
            android:id="@+id/detail_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="年份："
            android:textColor="@color/second_text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/detail_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="制片地区："
            android:textColor="@color/second_text_color"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_shadow"
        android:id="@+id/rate_card"
        android:orientation="vertical"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/avgRate"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textSize="24sp"
            android:text=""
            android:textColor="@color/primary_text_color" />
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rateBar"
            style="@style/MyRatingBar"
            android:numStars="5"
            android:layout_gravity="center"
            android:isIndicator="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rateCount"
            android:textSize="13sp"
            android:text=""
            android:textColor="@color/second_text_color"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>



</RelativeLayout>